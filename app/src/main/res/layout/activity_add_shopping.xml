<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_ruzhu" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="添加店铺" />

                <EditText
                    style="@style/ApplyService2Edt"
                    android:hint="请输入店铺名" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_ruzhu" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="店铺分类" />

                <TextView
                    style="@style/ApplyService2Edt"
                    android:hint="请选择店铺类型" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_shop_tel_" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="客服电话" />

                <EditText
                    style="@style/ApplyService2Edt"
                    android:hint="请保持客服电话畅通" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_shop_address" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="店铺地址" />

                <TextView
                    style="@style/ApplyService2Edt"
                    android:hint="点击地图定位店铺地址" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_shop_quan" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="选择商圈" />

                <TextView
                    style="@style/ApplyService2Edt"
                    android:hint="点击选择商业圈" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_shop_time" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="营业时间" />

                <EditText
                    style="@style/ApplyService2Edt"
                    android:hint="例:09:00-18:00 周一至周五" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />
            <!--免费停车-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_is_free_car" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="免费停车" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/stop_car_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:switchMinWidth="20dp"
                    android:textColor="@color/transparent"
                    android:textOff=""
                    android:textOn=""
                    android:textSize="12sp"
                    android:thumb="@drawable/track"
                    android:track="@drawable/switch_setting_selector"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/left_icon_size"
                    android:layout_height="@dimen/left_icon_size"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:src="@mipmap/icon_is_wifi" />

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="免费WiFi" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <Switch
                    android:id="@+id/wifi_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:switchMinWidth="20dp"
                    android:textColor="@color/transparent"
                    android:textOff=""
                    android:textOn=""
                    android:textSize="12sp"
                    android:thumb="@drawable/track"
                    android:track="@drawable/switch_setting_selector"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5f7fa"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_bg"
                    android:text="下一步"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>