<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yunsen.enjoy.widget.BaseScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <ImageView
                    android:id="@+id/look_img_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/look_img_tv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_gray_bg"
                    android:gravity="center"
                    android:text="10张"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="湘川人家"
                        android:textColor="@color/title_color"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可消费消费券:"
                            android:textColor="@color/color_888"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88.62"
                            android:textColor="@color/color_theme"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/pay_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:background="@drawable/button_bg"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="付款"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间:"
                    android:textColor="@color/color_666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/service_time_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9:00-22:00"
                    android:textColor="@color/color_888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/collect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:background="@drawable/recharge_tv_bg_select"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="收藏"
                    android:textColor="@drawable/text_select"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/location" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="广东省深圳市南山区深云村"
                    android:textColor="@color/color_666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00Km"
                    android:textColor="@color/color_888"
                    android:textSize="11sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_f5f7fa" />

                <ImageView
                    android:id="@+id/phone_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:src="@mipmap/shop_phone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/app_margin"
                    android:drawableLeft="@mipmap/red_circle_hook"
                    android:drawablePadding="5dp"
                    android:text="服务保障"
                    android:textColor="@color/color_888"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/app_margin"
                    android:drawableLeft="@mipmap/red_circle_hook"
                    android:drawablePadding="5dp"
                    android:text="急速退款"
                    android:textColor="@color/color_888"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/app_margin"
                    android:drawableLeft="@mipmap/red_circle_hook"
                    android:drawablePadding="5dp"
                    android:text="资金安全"
                    android:textColor="@color/color_888"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f5f7fa" />


            <!--店铺详情-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺详情"
                    android:textColor="@color/title_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:orientation="vertical">

                <TextView
                    style="@style/shop_description_title"
                    android:text="可用时间:" />

                <TextView
                    style="@style/shop_description_content"
                    android:text="周末法定节假日通用" />

                <TextView
                    style="@style/shop_description_title"
                    android:text="预约提示:" />

                <TextView
                    style="@style/shop_description_content"
                    android:text="无需预约,直接消费" />

                <TextView
                    style="@style/shop_description_title"
                    android:text="使用规则:" />

                <TextView
                    style="@style/shop_description_content"
                    android:text="满30元可用" />

                <TextView
                    style="@style/shop_description_title"
                    android:text="以下产品可使用消费券:"
                    android:visibility="gone" />

                <TextView
                    style="@style/shop_description_title"
                    android:text="温馨提示:" />

                <TextView
                    style="@style/shop_description_content"
                    android:text="提供免费停车位" />

                <TextView
                    style="@style/shop_description_content"
                    android:text="提供免费WiFi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f5f7fa" />
            <!--推荐更多-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐更多"
                    android:textColor="@color/title_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </com.yunsen.enjoy.widget.BaseScrollView>

    <LinearLayout
        android:id="@+id/action_bar_layout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_theme"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_back_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_gray_bg"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/arrow_left_white" />

        <TextView
            android:id="@+id/action_bar_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="湘川人家"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/action_bar_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/app_margin"
            android:background="@drawable/round_gray_bg"
            android:padding="8dp"
            android:src="@mipmap/share" />

        <TextView
            android:id="@+id/action_back_complaint"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/app_margin"
            android:background="@drawable/round_gray_bg"
            android:gravity="center"
            android:text="投诉"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>
