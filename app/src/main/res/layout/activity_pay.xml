<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f5f7fa"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可消费消费券"
                    android:textColor="@color/color_666"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.11"
                    android:textColor="@color/color_theme"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@drawable/shape_bg_round_white_bg">

                <include layout="@layout/pay_type_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@drawable/shape_bg_round_white_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:text="消费金额"
                    android:textColor="@color/title_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/pay_money_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/color_f5f7fa"
                    android:drawableLeft="@mipmap/red_rmb"
                    android:drawablePadding="5dp"
                    android:hint="询问服务员后输入"
                    android:inputType="numberDecimal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/title_color"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin">

                    <TextView
                        android:id="@+id/my_card_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我有消费券:21.0"
                        android:textColor="@color/color_666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/recharge_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin"
                        android:paddingRight="@dimen/app_margin"
                        android:text="充值"
                        android:textColor="@color/color_theme"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_bg"
                android:text="确认买单 "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:paddingBottom="@dimen/app_margin"
                android:paddingTop="@dimen/app_margin"
                android:text="消费券使用说明"
                android:textColor="@color/title_color"
                android:textSize="14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/black_spot"
                android:drawablePadding="5dp"
                android:text="用户每笔充值记录,都单独记录在我的通吃券列表中退款只能对整个充值订单进行操作"
                android:textColor="@color/color_666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/black_spot"
                android:drawablePadding="5dp"
                android:text="充值:优先使用充值金额(消费券),再使用赠送金额(消费券)"
                android:textColor="@color/color_666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/black_spot"
                android:drawablePadding="5dp"
                android:text="退款:只能退款充值金额且退款操作后如果充值金额为0赠送券会自动删除(详情见消费券退款说明"
                android:textColor="@color/color_666"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>