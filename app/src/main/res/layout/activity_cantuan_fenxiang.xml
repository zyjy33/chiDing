<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/no_color"
     android:orientation="vertical" >

      <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/ybs" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="拼团购"
            android:textColor="#000000"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fanhuijian"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_fanhui"
            android:layout_marginRight="17dp"
            android:text=""
            android:textSize="16dip" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="@color/gray" />
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:background="@color/white"
     android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
    <TextView
        android:id="@+id/tvshowtime"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="16sp"
         android:textColor="#000000"
        android:text=""
         />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginTop="10dp"
        android:orientation="horizontal"
         >
          <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="还差"
         />
    <TextView
        android:id="@+id/tv_tishi"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/hongse"
        android:text="0"
         />
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="人，赶快邀请好友来参团吧"
         />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@color/white" >
                    <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white" >
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/gray" />
                    </LinearLayout>
                      <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="30dp"
                                  android:text="分享至"
                                  android:layout_marginLeft="10dp"
                                  android:layout_marginRight="10dp"
                                  android:gravity="center"
                                  android:textSize="15sp" />
                      <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white" >
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/gray" />
                    </LinearLayout>
                      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="20dp"
        android:gravity="center"
         >
<ImageButton
            android:id="@+id/img_btn_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000"
            android:padding="0dp"
            android:src="@drawable/sms" />
        <ImageButton
            android:id="@+id/img_btn_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:background="#0000"
            android:padding="0dp"
            android:src="@drawable/wechat" />

        <ImageButton
            android:id="@+id/img_btn_wx_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_weight="1"
            android:background="#0000"
            android:padding="0dp"
            android:src="@drawable/friend" />


        <ImageButton
            android:id="@+id/img_btn_tencent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000"
            android:padding="0dp"
            android:src="@drawable/tencent" />

        
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_buju"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>