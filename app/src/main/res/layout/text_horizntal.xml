            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="智能排序"
            android:drawableRight="@drawable/down_more_selected"
            android:textColor="@drawable/orange_text_select"
            android:textSize="14sp" />
    </LinearLayout>

