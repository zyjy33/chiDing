<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
         android:background="@color/white" 
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_ware"
            android:layout_width="70dp"
            android:layout_height="70dp"
                 android:scaleType="fitXY"
            android:background="@color/baihuise"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/img_ware"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ware_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:lines="2"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/tv_ware_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="¥0.00"
                android:textColor="#FF0000"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_ware_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:text="收藏人气   0"
                android:textColor="#666666"
                android:textSize="12dip" />
        </LinearLayout>
    </RelativeLayout>
 <LinearLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:background="@color/hongse"
            android:text="删除"
            android:textColor="@color/white"
             />
    </LinearLayout>
</LinearLayout>