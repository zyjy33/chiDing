<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="@dimen/city_list_margin_left_dimen"
        android:background="@color/city_item_divider_color"
        android:gravity="center_vertical"
        android:text="A"
        android:textColor="@color/color_000"
        android:textSize="14sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="@dimen/city_list_margin_left_dimen"
        android:layout_marginRight="@dimen/city_list_margin_right_dimen"
        android:background="@color/city_item_divider_color" />

</LinearLayout>